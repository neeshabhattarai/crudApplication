@model Item;

<div class="w-100 d-flex justify-content-center mt-lg-2 ">

<form method="post" enctype="multipart/form-data" class="d-flex flex-column gap-4  w-25 pt-lg-5">
   <div class="d-flex justify-content-between">

   <label>Name:</label>
    <input type="text" asp-for="Name"/>
   </div>
        <div class="d-flex justify-content-between ">

    <label>Description:</label>
    <input type="text" asp-for="Description" />
   </div>
        <div class="d-flex justify-content-between ">

            <label>Image:</label>
            <input type="file" asp-for="Image" />
        </div>
    <button id="itembtn" class="bg-primary align-self-center w-25 px-2 py-1 rounded-1" type="submit">Submit</button>
</form>
</div>
